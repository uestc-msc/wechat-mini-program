<!--pages/gallery/gallery.wxml-->
<view class="page gallery-root">
  <view class="title">{{title}}</view>
  <view wx:for="{{activities_arr}}" wx:for-item="activities" wx:key="index" class="album-list">
    <view class="album-wrapper"
      wx:for="{{activities}}"
      wx:for-item="item" 
      wx:key="_id"
      data-item="{{item}}"
      bindtap="tapAlbum">
      <view class="album-container">
        <view class="album-cover">
          <image mode="aspectFit" src="{{item.avatar_url}}"></image>
        </view>
        <view class="album-name">{{item.title}}</view>
      </view>
    </view>
  </view>
</view>