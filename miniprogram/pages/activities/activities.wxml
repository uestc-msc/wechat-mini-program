<!--pages/activities/activities.wxml-->
<view class="page" data-weui-theme="{{theme}}">
	<view class="page__bd">
		<view class="weui-panel weui-panel_access">
			<view class="weui-panel__hd">近期沙龙</view>
			<view class="weui-panel__bd" wx:for="{{recent_salon}}" wx:for-item="recent_salon" wx:key="topic">
				<a class="weui-media-box weui-media-box_appmsg">
					<view class="weui-media-box__hd">
						<image class="weui-media-box__thumb" src="data:image/png;base64," alt></image>
					</view>
					<view class="weui-media-box__bd">
						<h4 class="weui-media-box__title">{{recent_salon.topic}}</h4>
						<view class="weui-media-box__desc"><text>{{recent_salon.date}} {{recent_salon.time}}\n{{recent_salon.presenter}} | {{recent_salon.place}}</text></view>
					</view>
				</a>
			</view>
			<view class="weui-panel__ft">
				<a class="weui-cell weui-cell_active weui-cell_access weui-cell_link">
					<view class="weui-cell__bd">查看更多</view>
					<text class="weui-cell__ft"></text>
				</a>
			</view>
		</view>
		<view class="button-sp-area">
			<a class="weui-btn weui-btn_primary">创建沙龙</a>
		</view>
		<view class="button-sp-area">
			<a class="weui-btn weui-btn_primary">签到</a>
		</view>
				<view class="weui-tab">
			<view class="weui-tab__panel">
			</view>
			<view class="weui-tabbar">
				<view class="weui-tabbar__item weui-bar__item_on">
					<image src="../../images/icon_date_filling.png" alt class="weui-tabbar__icon"></image>
					<view class="weui-tabbar__label">活动</view>
				</view>
				<view class="weui-tabbar__item">
					<image src="../../images/icon_gallery.png" alt class="weui-tabbar__icon"></image>
					<view class="weui-tabbar__label">相册</view>
				</view>
				<view class="weui-tabbar__item">
					<image src="../../images/icon_user.png" alt class="weui-tabbar__icon"></image>
					<view class="weui-tabbar__label">我</view>
				</view>
			</view>
		</view>
	</view>
</view>